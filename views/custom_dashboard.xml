<odoo>
    <!-- Dashboard Menu -->
    <menuitem id="menu_custom_dashboard" name="Custom_Dashboard" parent="school_menu_root" sequence="5"/>

    <!-- Dashboard Client Action -->
    <record id="action_custom_dashboard" model="ir.actions.client">
        <field name="name">Custom Dashboard</field>
        <field name="tag">custom_dashboard</field>
    </record>

    <!-- Link Menu to Action -->
    <menuitem id="menu_custom_dashboard_action"
              name="Custom Dashboard"
              parent="menu_custom_dashboard"
              action="action_custom_dashboard"
              sequence="1"/>
</odoo>